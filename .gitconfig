[user]
    name = Yash-Garg
    email = me@yashgarg.dev
    signingKey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAILx1G6WZ4MQ8c4hUZy2Be+GF5fZQJSssn4qnJoQ4MPxz

[push]
    autoSetupRemote = true
    default = current

[branch]
    sort = -committerdate

[color]
    ui = true

[column]
    ui = auto

[alias]
    c = clone
    diff = diff -w
    cpa = cherry-pick --abort
    cpc = cherry-pick --continue
    su = submodule update --init --recursive
    undo = reset --soft HEAD^
    sw = "!git switch $(git branch | fzf | tr -d '*[:space:]')"
    staash = stash --all
    fix = commit --fixup

[core]
    editor = nano
    autocrlf = false
    # sshcommand = C:/Windows/System32/OpenSSH/ssh.exe
    pager = delta
    compression = 9

[color "diff"]
    meta = blue
    old = red
    new = green

[interactive]
    diffFilter = delta --color-only

[commit]
    gpgsign = true

[format]
    signoff = true

[url "git@github.com:"]
    insteadOf = https://github.com/
    insteadOf = git://github.com/

[pull]
    rebase = true

[gpg]
    format = ssh

[tag]
    gpgsign = true

[init]
    defaultBranch = develop

[merge]
    conflictstyle = diff3

[rerere]
    enabled = true

[delta]
    features = line-numbers decorations
    navigate = false
    syntax-theme = none
    light = false
    line-numbers = true
    plus-style = green bold
    plus-emph-style = green bold normal
    minus-style = red bold
    minus-emph-style = red bold normal

[delta "decorations"]
    file-style = bold yellow ul
    file-decoration-style = none
    hunk-header-decoration-style = white box

[delta "line-numbers"]
    line-numbers-left-format = "{nm:>4}:"
    line-numbers-right-format = "{np:<4} "
    line-numbers-minus-style = red bold
    line-numbers-plus-style = green bold

[diff]
    algorithm = histogram
    submodule = log
    colorMoved = default

[submodule]
    recurse = true

[status]
    submoduleSummary = true

[gpg "ssh"]
    allowedSignersFile = allowed_signers

[credential]
    helper = manager

[safe]
    directory = *

[fetch]
    writeCommitGraph = true

[includeIf "gitdir/i:~/projects/work/"]
    path = ~/.gitconfig-work
