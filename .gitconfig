[user]
name = Yash-Garg
email = yash.garg@outlook.in
signingKey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAILx1G6WZ4MQ8c4hUZy2Be+GF5fZQJSssn4qnJoQ4MPxz

[push]
autoSetupRemote = true
default = current

[color]
ui = true

[core]
editor = nano
autocrlf = false
sshcommand = C:/Windows/System32/OpenSSH/ssh.exe
whitespace = trailing-space
pager = delta

[interactive]
diffFilter = delta --color-only

[commit]
gpgsign = true

[format]
signoff = true

[url "git@github.com:"]
insteadOf = https://github.com/
insteadOf = git://github.com/

[pull]
rebase = false

[gpg]
format = ssh

[tag]
gpgsign = true

[merge]
conflictstyle = diff3

[delta]
features = line-numbers decorations
navigate = false
syntax-theme = none
light = false
line-numbers = true
plus-style = green bold
plus-emph-style = green bold normal
minus-style = red bold
minus-emph-style = red bold normal

[delta "decorations"]
file-style = bold yellow ul
file-decoration-style = none
hunk-header-decoration-style = white box

[delta "line-numbers"]
line-numbers-left-format = "{nm:>4}:"
line-numbers-right-format = "{np:<4} "
line-numbers-minus-style = red bold
line-numbers-plus-style = green bold

[diff]
submodule = log
colorMoved = default

[gpg "ssh"]
allowedSignersFile = allowed_signers

[includeIf "gitdir/i:E:/Projects/Work/"]
path = .gitconfig-work
